#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM_FILA 5

// Estrutura que representa uma pe√ßa do Tetris
typedef struct {
    int id;
    char tipo;
} Peca;

// Estrutura que representa a fila circular
typedef struct {
    Peca fila[TAM_FILA];
    int frente;
    int tras;
    int tamanho;
} Fila;

// ---------- Fun√ß√µes auxiliares ---------- //

// Gera uma nova pe√ßa automaticamente
Peca gerarPeca(int id) {
    char tipos[] = {'I', 'O', 'T', 'L', 'J', 'S', 'Z'};
    Peca nova;
    nova.id = id;
    nova.tipo = tipos[rand() % 7];
    return nova;
}

// Inicializa a fila com 5 pe√ßas
void inicializarFila(Fila *f) {
    f->frente = 0;
    f->tras = TAM_FILA - 1;
    f->tamanho = TAM_FILA;

    for (int i = 0; i < TAM_FILA; i++) {
        f->fila[i] = gerarPeca(i + 1);
    }
}

// Verifica se a fila est√° cheia
int estaCheia(Fila *f) {
    return f->tamanho == TAM_FILA;
}

// Verifica se a fila est√° vazia
int estaVazia(Fila *f) {
    return f->tamanho == 0;
}

// Insere nova pe√ßa no final da fila
void inserirPeca(Fila *f, Peca nova) {
    if (estaCheia(f)) {
        printf("‚ö†Ô∏è  A fila est√° cheia! Jogue uma pe√ßa antes de inserir outra.\n");
        return;
    }
    f->tras = (f->tras + 1) % TAM_FILA;
    f->fila[f->tras] = nova;
    f->tamanho++;
    printf("‚úÖ Pe√ßa '%c' (ID %d) adicionada √† fila!\n", nova.tipo, nova.id);
}

// Remove a pe√ßa da frente (jogar a pe√ßa)
void jogarPeca(Fila *f) {
    if (estaVazia(f)) {
        printf("‚ö†Ô∏è  Fila vazia! N√£o h√° pe√ßas para jogar.\n");
        return;
    }
    Peca jogada = f->fila[f->frente];
    f->frente = (f->frente + 1) % TAM_FILA;
    f->tamanho--;
    printf("üéÆ Pe√ßa jogada: '%c' (ID %d)\n", jogada.tipo, jogada.id);
}

// Exibe o estado atual da fila
void exibirFila(Fila *f) {
    if (estaVazia(f)) {
        printf("\nüì≠ Fila vazia!\n");
        return;
    }

    printf("\n=== FILA ATUAL DE PE√áAS ===\n");
    printf("%-10s %-10s\n", "ID", "Tipo");
    printf("--------------------------\n");

    int i = f->frente;
    for (int cont = 0; cont < f->tamanho; cont++) {
        printf("%-10d %-10c\n", f->fila[i].id, f->fila[i].tipo);
        i = (i + 1) % TAM_FILA;
    }
}

// ---------- Fun√ß√£o principal ---------- //
int main() {
    Fila fila;
    int opcao;
    int contadorIDs = 5; // come√ßa em 5 pois as 5 iniciais j√° foram criadas

    srand(time(NULL)); // para gerar pe√ßas aleat√≥rias

    inicializarFila(&fila);

    do {
        printf("\n=== MENU TETRIS STACK ===\n");
        printf("1 - Visualizar fila\n");
        printf("2 - Jogar pe√ßa (remover da frente)\n");
        printf("3 - Inserir nova pe√ßa (no final)\n");
        printf("0 - Sair\n");
        printf("Escolha uma op√ß√£o: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                exibirFila(&fila);
                break;

            case 2:
                jogarPeca(&fila);
                break;

            case 3:
                if (!estaCheia(&fila)) {
                    contadorIDs++;
                    inserirPeca(&fila, gerarPeca(contadorIDs));
                } else {
                    printf("‚ö†Ô∏è  Fila cheia! Jogue uma pe√ßa primeiro.\n");
                }
                break;

            case 0:
                printf("\nEncerrando o jogo... üëã\n");
                break;

            default:
                printf("‚ùó Op√ß√£o inv√°lida, tente novamente.\n");
        }

    } while (opcao != 0);

    return 0;
}
